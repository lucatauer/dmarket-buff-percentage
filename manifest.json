{
  "manifest_version": 2,
  "name": "DMarket Buff Percentage",
  "version": "1.0",
  "description": "Adds the buff.163.com price percentage to items on dmarket.com.",
  "icons": {
    "48": "icon48.png"
  },
  "permissions": [
    "activeTab",
    "https://*.dmarket.com/*",
    "https://api.skinpricer.com/*"
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": ["https://*.dmarket.com/*"],
      "css": ["main.css"],
      "js": ["content.js"]
    }
  ]
}
